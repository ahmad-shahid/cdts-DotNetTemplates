@inject IJSRuntime jsRuntime

@ChildContent

@code {
    [Parameter]
    public string WetComponentName { get; set; }

    [Parameter]
    public List<string> WetComponentNames { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    protected override void OnAfterRender(bool firstRender) // = On Page Load
    {
        if (WetComponentNames is null) jsRuntime.InvokeVoidAsync("cdtsBlazor.resetWetComponents", WetComponentName);
        else jsRuntime.InvokeVoidAsync("cdtsBlazor.resetWetComponents", WetComponentNames);
    }
}
