@inject IJSRuntime jsRuntime
@inject NavigationManager Navigation

@code {
    [Parameter]
    public GoC.WebTemplate.Components.Entities.ITop TopObj { get; set; }

    protected override void OnAfterRender(bool firstRender)
    {
        if (TopObj.LngLinks is null)
        {
            List<LanguageLink> links = new List<LanguageLink>()
            {
                new LanguageLink(){Href=Navigation.BaseUri + "ChangeLang"}
            };

            TopObj.LngLinks = links;
        }

        string str = JsonPlainSerializationHelper.SerializeToJson(TopObj).ToString();

        if (TopObj is GoC.WebTemplate.Blazor.Model.Top) jsRuntime.InvokeVoidAsync("setTop", str, false);
        else jsRuntime.InvokeVoidAsync("setTop", str, true);
    }
}
