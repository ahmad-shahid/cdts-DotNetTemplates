<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" DefaultTargets="MainBuild">

  <!-- Variables -->
  <PropertyGroup>
    <!-- Base Folder for MSBuild -->
    <BaseDir>$(MSBuildProjectDirectory)</BaseDir>
    <!-- Source directory of the project -->
    <SourceDir>$([System.IO.Path]::GetFullPath('..\..\..\'))</SourceDir>
    <!-- Library directory of the project -->
    <LibrariesDir>$([System.IO.Path]::GetFullPath('..\..\'))Libraries\</LibrariesDir>
    <!-- Library directory of the project -->
    <NuGetSpecDir>$([System.IO.Path]::GetFullPath('..\..\'))NuSpec Files\</NuGetSpecDir>
    <!-- Nuget Folder (Include exe and config -->
    <NuGetDir>$([System.IO.Path]::GetFullPath('..\..\')).nuget\</NuGetDir>

    <!-- Project Template Starter directory -->
    <WebTemplateProjectDir>$(SourceDir)Applications\GoC.WebTemplateMVC</WebTemplateProjectDir>
    <!-- Project File -->
    <WebTemplateProjectFile>$(WebTemplateProjectDir)\GoC.WebTemplateMVC.csproj</WebTemplateProjectFile>
    
    <!-- Release Folder -->
    <ReleaseRootDir>C:\temp\Release</ReleaseRootDir>
    <!-- Release Folder Template -->
    <ReleaseTemplateDir>$(ReleaseRootDir)\GoCWebTemplate-MVC</ReleaseTemplateDir>
    <!-- Nuget Folder -->
    <NugetRootDir>C:\temp\Nuget</NugetRootDir>
    
    <!-- Binaries Folder -->
    <OutBinariesDir>$(WebTemplateProjectDir)\bin</OutBinariesDir>
    <!-- Content Folder -->
    <OutContentDir>$(WebTemplateProjectDir)\Views\GoC.WebTemplate</OutContentDir>
    
    <!-- Create NuGet package? -->
    <CreatePackage>1</CreatePackage>
    
    <!-- Configuration Value -->
    <Configuration Condition="'$(Configuration)'==''" >Release</Configuration>
  </PropertyGroup>

  <Import Project="$(LibrariesDir)MSBuild.Community.Tasks.targets" />

  <UsingTask AssemblyFile="$(MSBuildCommunityTasksLib)" TaskName="MSBuild.Community.Tasks.XmlUpdate" />
  <UsingTask AssemblyFile="$(MSBuildCommunityTasksLib)" TaskName="MSBuild.Community.Tasks.Zip" />

  <!-- "MainBuild" -->
  <Target Name="MainBuild">    
    <CallTarget Targets="CopyRelease"/>
    <CallTarget Condition="$(CreatePackage) == '1'" Targets="NuGet;CleanUpReleaseFolder;"/>    
  </Target>

  <!-- Copy files to release folder -->
  <Target Name="CopyRelease">
    <MakeDir Directories="$(ReleaseTemplateDir)\Lib"/>
    <MakeDir Directories="$(ReleaseTemplateDir)\Content"/>

    <ItemGroup>
      <ReleaseFiles Include="$(OutBinariesDir)\GoC.WebTemplateMVC.dll;$(OutBinariesDir)\CDTSEnvironments.json;$(OutBinariesDir)\WebTemplateMVC.xsd"/>
      <ReleaseFilesContent Include="$(OutContentDir)\**\*.*"  Exclude="$(WebTemplateProjectDir)\GoC.WebTemplate\**\*.cs"></ReleaseFilesContent>
    </ItemGroup>
    
    <!--Copy the XDT file to the content dir -->
    <Copy SourceFiles="$(NuGetSpecDir)GoC.WebTemplate-MVC.nuspec" DestinationFolder="$(ReleaseTemplateDir)\" />

    <!--Second copy the Binarie files to the package dir -->
    <Copy SourceFiles="@(ReleaseFiles)" DestinationFolder="$(ReleaseTemplateDir)\Lib\Net45"/>

    <!--This copy the content to the package dir -->
    <Copy SourceFiles="@(ReleaseFilesContent)" DestinationFolder="$(ReleaseTemplateDir)\Content\Views\GoC.WebTemplate\%(RecursiveDir)"/>

  </Target>

  <!-- Make NuGet package-->
  <Target Name="NuGet">
    
    <!--First copy the nuspec template files to the package dir -->
    <Copy SourceFiles="$(WebTemplateProjectDir)\Web.config.install.xdt;$(WebTemplateProjectDir)\WebTemplateMVC.xsd;$(WebTemplateProjectDir)\CDTSEnvironments.json" DestinationFolder="$(ReleaseTemplateDir)\Content\" />

     <!-- insert the version number into the nuspec files -->
    <XmlUpdate
      Namespace="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd"
      XmlFileName="$(ReleaseRootDir)\GoCWebTemplate-MVC\GoC.WebTemplate-MVC.nuspec"
      XPath="/package/metadata/version"
      Value="$(VersionNumber)" />

    <!--insert the release notes-->
    <XmlUpdate
      Namespace="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd"
      XmlFileName="$(ReleaseRootDir)\GoCWebTemplate-MVC\GoC.WebTemplate-MVC.nuspec"
      XPath="/package/metadata/releaseNotes"
      Value="$(ReleaseNotes)" />
    
    <XmlUpdate
      Namespace="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd"
      XmlFileName="$(ReleaseRootDir)\GocWebTemplate-MVC\GoC.WebTemplate-MVC.nuspec"
      XPath="/package/metadata/dependencies/dependency/@version"
      Value="$(dependencyVersionNumber)" />

    <!-- 3. create package -->    
    <Exec WorkingDirectory="$(ReleaseRootDir)" Command="$(NuGetDir)nuget.exe pack $(ReleaseTemplateDir)\GoC.WebTemplate-MVC.nuspec" />
    
  </Target>

  <!-- Cleanup the Release folder -->
  <Target Name="CleanUpReleaseFolder">
    <RemoveDir Directories="$(ReleaseRootDir)\GoCWebTemplate-MVC"/>
  </Target>

  <!-- Create zip file -->
  <Target Name="Zip">
    <CreateItem Include="$(ReleaseRootDir)\**\*.*" >
      <Output ItemName="ZipFiles" TaskParameter="Include"/>
    </CreateItem>

    <Zip ZipFileName="$(NugetRootDir)\GoCWebTemplateMVC.zip" WorkingDirectory="$(ReleaseRootDir)" Files="@(ZipFiles)" />
  </Target>

</Project>